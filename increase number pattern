package com.company;

import java.util.Scanner;

public class Pattern8 {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int a=1;
        for(int i=0;i<=n;i++){
//            a++;
            for(int j=0;j<=i;j++){
                System.out.print(" "+a);
                a++;

            }
            System.out.println();
        }
    }
}
